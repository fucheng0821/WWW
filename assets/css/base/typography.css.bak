/* 排版样式 */
h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.01em;
    color: var(--text-dark);
    margin-bottom: 0.5em;
}

/* Base heading sizes - responsive by default */
h1 {
    font-size: 2.5rem;
}

h2 {
    font-size: 2rem;
}

h3 {
    font-size: 1.75rem;
}

h4 {
    font-size: 1.5rem;
}

h5 {
    font-size: 1.25rem;
}

h6 {
    font-size: 1rem;
}

p {
    color: var(--text-light);
    line-height: 1.7;
    margin-bottom: 1em;
}

a {
    color: var(--accent-blue);
    text-decoration: none;
    transition: all 0.3s var(--ease-smooth);
}

a:hover {
    color: var(--accent-pink);
}